<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <!--头部部分-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp" >



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#808000" />

        <ImageView
            android:id="@+id/return_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:src="@mipmap/returning" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="商品详情"
            android:textColor="#ffffff"
            android:textSize="24dp" />
    </FrameLayout>

    <!--中间部分-->


    <!--尾部-->

    <include
        layout="@layout/goodsdetial2"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="#F0F0F2"
        android:gravity="center"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/bt_buy"
            android:layout_width="83dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="0.3"
            android:background="#FF9900"
            android:gravity="center"
            android:text="立刻购买"
            android:textColor="#ffffff"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/bt_addshoppingcar"
            android:layout_width="83dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.3"
            android:background="#ED0C00"
            android:onClick="joinToShopping"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="#ffffff"
            android:textSize="16dp" />


    </LinearLayout>

</LinearLayout>